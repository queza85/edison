<?xml version="1.0"?>
<!DOCTYPE liferay-portlet-app PUBLIC "-//Liferay//DTD Portlet Application 6.2.0//EN" "http://www.liferay.com/dtd/liferay-portlet-app_6_2_0.dtd">

<liferay-portlet-app>
	
	<portlet>
		<portlet-name>science-app-manager</portlet-name>
		<icon>/icon.png</icon>
		<indexer-class>com.kisti.science.platform.app.search.ScienceAppIndexer</indexer-class>
		<control-panel-entry-category>
			site_administration.content
		</control-panel-entry-category>
		<control-panel-entry-weight>1.5</control-panel-entry-weight>
		<asset-renderer-factory>com.kisti.science.platform.app.asset.ScienceAppAssetRendererFactory</asset-renderer-factory>
		<header-portlet-css>/css/main.css</header-portlet-css>
		<footer-portlet-javascript>
			/js/main.js
		</footer-portlet-javascript>
		<css-class-wrapper>
			science-app-manager-portlet
		</css-class-wrapper>
	</portlet>
	<portlet>
		<portlet-name>science-app-string-editor</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>true</instanceable>
		<css-class-wrapper>science-app-string-editor-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>science-app-founder</portlet-name>
		<icon>/icon.png</icon>
		<css-class-wrapper>
			science-app-founder-portlet
		</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>science-app-image-viewer</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>true</instanceable>
		<css-class-wrapper>
			science-app-image-viewer-portlet
		</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>science-app-inputdeck-viewer</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>true</instanceable>
		<css-class-wrapper>
			science-app-inputdeck-viewer-portlet
		</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>science-app-inputdeck-editor</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>true</instanceable>
		<css-class-wrapper>
			science-app-inputdeck-editor-portlet
		</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>science-app-onedplot-viewer</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>true</instanceable>
		<css-class-wrapper>onedplotviewer-portlet</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<portlet>
		<portlet-name>science-app-text-viewer</portlet-name>
		<icon>/icon.png</icon>
		<instanceable>true</instanceable>
		<css-class-wrapper>
			science-app-text-viewer-portlet
		</css-class-wrapper>
		<add-default-resource>true</add-default-resource>
	</portlet>
	<role-mapper>
		<role-name>administrator</role-name>
		<role-link>Administrator</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>guest</role-name>
		<role-link>Guest</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>power-user</role-name>
		<role-link>Power User</role-link>
	</role-mapper>
	<role-mapper>
		<role-name>user</role-name>
		<role-link>User</role-link>
	</role-mapper>
</liferay-portlet-app>